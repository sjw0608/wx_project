page {
  font-size: 28rpx;
}

.setting-header {
  height: 80rpx;
  width: 100%;
  padding: 0 30rpx;
  line-height: 80rpx;
  background-color: #fff;
  box-sizing: border-box;
  border-top: 1px solid #f2f2f2;
}

.class_title {
  display: block;
  width: 100%;
  color: #acacac;
  padding: 17rpx 0rpx 17rpx 30rpx;
  border-bottom: 1px solid #f2f2f2;
  box-sizing: border-box;
}

.information {
  border-bottom: 1px solid #f2f2f2;
  background-color: #fff;
}

.information switch {
  -webkit-transform: scale(0.7, 0.7);
  -moz-transform: scale(0.7, 0.7);
}

.information>view {
  height: 90rpx;
  line-height: 90rpx;
  margin-left: 30rpx;
  padding-right: 40rpx;
  border-bottom: 1px solid #f2f2f2;
}

.information>view:last-child {
  border-bottom: none;
}

.weui-input {
  height: 90rpx;
  min-height: 90rpx;
  line-height:90rpx;
  text-align: right;
}

.other>view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  box-sizing: border-box;
}

.sizeColor {
  color: #e41436;
}

