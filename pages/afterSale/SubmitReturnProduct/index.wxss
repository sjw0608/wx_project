.header {
  padding: 30rpx;
  box-sizing: border-box;
}

.order-num {
  height: 52rpx;
  line-height: 52rpx;
  font-size: 24rpx;
  border-bottom: 1px dashed #ddd;
}

.order-details {
  padding: 30rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  border-bottom: 1px dashed #ddd;
}

.order-details image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
}

.order-details_title {
  display: flex;
  flex-direction: row;
  width: 100%;
  font-size: 28rpx;
}

.shop_title {
  flex: 1;
  width: 75%;
}

.shop_title text {
  white-space: pre-wrap;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.price_num {
  display: flex;
  width: 25%;
  flex-direction: column;
  text-align: right;
}

.apply-reason {
  font-size: 24rpx;
  padding: 30rpx 0;
  border-bottom: 2px solid #ddd;
}

.apply-reason > view {
  margin-top: 10rpx;
  width: 100%;
  height: 56rpx;
  line-height: 56rpx;
}

.weui-cells {
  background-color: #f0eff5;
}

.weui-input {
  width: 320rpx;
  height: 56rpx;
  min-height: 56rpx;
  line-height: 56rpx;
  border: 1px solid #ddd;
  color: #000;
  padding: 0 10rpx;
  background-color: #fff;
}

.weui-label {
  width: 120rpx;
}

.rebate {
  font-size: 24rpx;
  height: 52rpx;
  line-height: 52rpx;
}

.mobilePhone>view, .detailed-reasons>view {
  font-size: 24rpx;
  height: 52rpx;
}

.mobilePhone input {
  height: 52rpx;
  width: 100%;
  border: 1px solid #ddd;
  background-color: #fff;
  padding: 0 15rpx;
  box-sizing: border-box;
}

.detailed-reasons {
  margin-top: 10rpx;
}

.detailed-reasons>view:last-child {
  height: 162rpx;
}

.detailed-reasons textarea {
  width: 100%;
  height: 160rpx;
  border: 1px solid #ddd;
  background-color: #fff;
  padding: 12rpx;
  color: #333;
  box-sizing: border-box;
}

.pic-proof {
  font-size: 24rpx;
}

.pic-proof>view:first-child {
  height: 60rpx;
  line-height: 60rpx;
}
