page {
  background-color: #fff;
}

.wuliu>view {
  font-size: 28rpx;
  height: 90rpx;
  line-height: 90rpx;
  margin-left: 30rpx;
  padding-right: 40rpx;
  border-bottom: 1px solid #f2f2f2;
}

.weui-input {
  height: 90rpx;
  min-height: 90rpx;
  line-height: 90rpx;
  text-align: right;
}

.wuliu-msg {
  height: 200rpx;
  margin-left: 30rpx;
  font-size: 28rpx;
  margin-right: 30rpx;
  padding: 10rpx 0;
  box-sizing: border-box;
}

.wuliu-msg .weui-label {
  line-height: 180rpx;
}

textarea {
  width: 100%;
  height: 180rpx;
  padding: 20rpx;
  background-color: #fff;
  box-sizing: border-box;
  font-size: 28rpx;
  border: 1px solid #f2f2f2;
}

.evaluate-title {
  border-top: 1px solid #f2f2f2;
  margin-left: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
}

.pic-proof {
  padding: 0 30rpx;
  box-sizing: border-box;
}

.pic-proof .weui-cells {
  margin-top: 0;
  line-height: 0;
}
