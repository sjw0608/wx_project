.account {
  border-top: 1px solid #f0eff5;
}

.account-item {
  background-color: #fff;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.item-left {
  width: 124rpx;
  padding-top: 10rpx;
  line-height: 120rpx;
  text-align: center;
}

.item-left .icon {
  font-size: 50rpx;
}

.item-left .icon-xuanzhong {
  color: #fd9f00;
}

.item-right {
  width: 100%;
  font-size: 28rpx;
  color: #666;
  border-bottom: 1px solid #f0eff5;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 30rpx 30rpx 30rpx 10rpx;
  box-sizing: border-box;
}

.informatiom {
  display: flex;
  flex-direction: column;
}

.informatiom-name {
  font-size: 32rpx;
  font-weight: 800;
  color: #000;
  margin-bottom: 10rpx;
}

.compile {
  margin-top: 20rpx;
  height: 46rpx;
  line-height: 46rpx;
  padding: 0 30rpx;
  border: 1px solid #e41436;
  color: #e41436;
  font-size: 30rpx;
  border-radius: 46rpx;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.model_content {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  font-size: 32rpx;
  z-index: 5200;
}

.model_content>view {
  background-color: #fff;
  height: 107rpx;
  text-align: center;
  line-height: 107rpx;
  border-bottom: 1px solid #f0eff5;
}

.model_content>view:last-child {
  border: none;
}

.add_account {
  margin: 90rpx 30rpx 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 12rpx;
  font-size: 30rpx;
  background-color: #FFF;
  color: #000;
  margin-top: 50rpx;
}
